CC = gcc
SRC = main.c holberton.c
OBJ = $(SRC:.c=.o)
NAME = holberton

.PHONY : all
all : $(OBJ) m.h
	$(CC) -Wall -Werror -Wextra -pedantic $(OBJ) -o $(NAME)

.PHONY : clean
clean :
	-$(RM) $(NAME) $(wildcard *~) $(wildcard *.swp)

.PHONY : oclean
oclean :
	-$(RM) $(OBJ)

.PHONY : fclean
fclean : clean oclean

.PHONY : re
re : oclean all
